<%- include('layout', { content: `
  <div class="m-8 p-4">
    <h2 class="text-2xl font-semibold mb-4">${action === 'add' ? 'Agregar Servicio' : 'Actualizar Servicio'}</h2>
    <form action="${action === 'add' ? '/add-service' : '/update-service/' + service.id}" method="post" class="space-y-4">
      ${typeof message !== 'undefined' ? `
        <div>
          <h3 class="text-2xl font-semibold mb-4 text-green-500">${message}</h3>
        </div>
        ` : ''
      }
      <div>
        <label for="title" class="block font-semibold">Título del Servicio:</label>
        <input type="text" id="title" name="title" class="w-full border rounded-md p-2" value="${service.title || ''}">
      </div>
      <div>
        <label for="description" class="block font-semibold">Descripción del Servicio:</label>
        <textarea id="description" name="description" class="w-full border rounded-md p-2" rows="4">${service.description || ''}</textarea>
      </div>
      <div>
        <label for="address" class="block font-semibold">Dirección del Taller:</label>
        <input type="text" id="address" name="address" class="w-full border rounded-md p-2" value="${service.address || ''}">
      </div>
      <div>
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md">Continuar</button>
        <button type="button" class="bg-gray-300 hover:bg-gray-400 text-gray-600 font-semibold py-2 px-4 rounded-md ml-2">Cancelar</button>
      </div>
    </form>
  </div>
  `,
  user: user,
  isAuthenticated: isAuthenticated

  }) %>
